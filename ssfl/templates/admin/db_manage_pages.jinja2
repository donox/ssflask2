<!DOCTYPE html>
<!--
     Route: '/admin/manage_page_data' => manage_page_data
     Template: db_manage_pages.jinja2
     Form: manage_page_data_form.py
     Processor: manage_page_data.py
-->
{% extends 'base/layout.jinja2' %}

{% block content %}
    <section class="container">
        <div class="XXX">
            <h3 class="h3">Display Data About Pages</h3>
            <form action="{{ url_for('admin_bp.manage_page_data') }}" method="post">
                {% with %}
                    {% set el_name=form.work_function %}
                    {% set el_class="input" %}
                    {% set el_placeholder="0000" %}
                    {% include 'base/form_entry.jinja2' %}
                {% endwith %}

                {% with %}
                    {% set el_name=form.search_field %}
                    {% set el_class="input" %}
                    {% set el_placeholder="ind*ley" %}
                    {% include 'base/form_entry.jinja2' %}
                {% endwith %}

                {% with %}
                    {% set el_name=form.search_string %}
                    {% set el_class="input" %}
                    {% set el_placeholder="ind*ley" %}
                    {% include 'base/form_entry.jinja2' %}
                {% endwith %}

                {% with %}
                    {% set el_name=form.folder_search %}
                    {% set el_class="input" %}
                    {% set el_placeholder="ind*ley" %}
                    {% include 'base/form_entry.jinja2' %}
                {% endwith %}

                <div class="button">
                    <input id="submit" type="submit" value="Submit">
                </div>
                {% if form.errors %}
                    <ul class="errors">
                        {% for error, val in form.errors.items() %}
                            {% if val is iterable and val is string %}
                                <li>{{ error }} : {{ val }}</li>
                            {% else %}
                                {% for val_el in val %}
                                    <li>{{ error }} : {{ val_el }}</li>
                                {% endfor %}
                            {% endif %}
                        {% endfor %}
                    </ul>
                {% endif %}
                {{ form.csrf_token }}
            </form>

        </div>
        <script>
            $ = jQuery;
            $('#js1').change(function () {
                $('.dpdb').parent().hide();
                $('.dp').parent().hide();
                $('.df').parent().hide();
                let opt = $('#js1 option:selected').val();
                $('.' + opt).parent().show();
            });
            //# sourceURL=json_make_template.js


        </script>
    </section>
{% endblock %}