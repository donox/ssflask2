<!DOCTYPE html>
<!--
     Route: '/index/<string:page>' => manage_index_pages
     Template: manage_index_pages.jinja2
     Form:
     Processor: index_page_layout.py
-->

{% extends 'base/layout.html' %}

{% block content %}
<section class="container" style="margin-top: 40px">
    <div class="xx">
        <div class="title">{{ title }}</div>
        <div>{{ content }}</div>
        <table>
            {% for item in items %}
            <tr>
                <td>{{ item.number}}</td>
                <td>{{ item.name}}</td>
                <td>{{ item.content}}</td>
                <td>
                    {% if item.link_type == 'page' %}
                    <a class="button is-link" href="{{ item.button_page}}">{{ item.button_name}}</a>
                    {% else %}
                    <a class="button is-link" href="{{ item.button_url}}">{{ item.button_name}}</a>
                    {% endif %}
                </td>
            </tr>
            {% endfor %}
        </table>
    </div>
</section>
{% endblock %}
